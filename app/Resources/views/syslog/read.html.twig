{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <table>
                {% for log in logs %}
                    <tr style="background-color: {{ log.getColor() }}">
                        <td>{{ log.date }}</a></td>
                        <td>{{ log.id }}</a></td>
                        <td>{{ log.level }}</a></td>
                        <td>{{ log.message }}</a></td>
                    </tr>
                {% endfor %}
            </table>
            <div class="button">
                {% if step != 0 %}
                    <a href="{{ path('read', {'container': container, 'start': start, 'step': step - 1 }) }}" >Previous</a>
                {% endif %}
            </div>
            <div class="button">
                <a href="{{ path('list') }}" >List</a>
            </div>
            <div class="button">
                <a href="{{ path('read', {'container': container, 'start': start }) }}" >First page</a>
            </div>
            <div class="button">
                <a href="{{ path('read', {'container': container, 'start': start, 'step': step + 1 }) }}" >Next</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<style>
    body { background: #F5F5F5; font: 18px/1.5 Courier New; }
    h1, h2 { line-height: 1.2; margin: 0 0 .5em; }
    h1 { font-size: 36px; }
    h2 { font-size: 21px; margin-bottom: 1em; }
    p { margin: 0 0 1em 0; }
    a { color: #0000F0; }
    a:hover { text-decoration: none; }
    code { background: #F5F5F5; max-width: 100px; padding: 2px 6px; word-wrap: break-word; }
    #wrapper { background: #FFF; margin: 1em auto; width: 95%; }
    #container { padding: 2em; }
    #welcome h1 span { display: block; font-size: 75%; }
    td:nth-child(4) {
        word-break: break-all;
    }

    .button {
        width: 23%;
        display: inline-block;
        text-align: center;
    }
    .button a {
        display: block;
        width: 100%;
        background-color: floralwhite;
        box-shadow: 0px 2px 15px -10px rgba(0,0,0,0.75);
        color: #000;
    }
    .button a:hover {
        display: block;
        width: 100%;
        background-color: floralwhite;
        box-shadow: inset 0px 2px 2px -2px rgba(0,0,0,0.75);
        color: #000;
    }

    @media (min-width: 768px) {
        #wrapper { width: 80%; margin: 2em auto; }
        #icon-book { display: inline-block; }
        #status a, #next a { display: block; }

        @-webkit-keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        @keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        .sf-toolbar { opacity: 0; -webkit-animation: fade-in 1s .2s forwards; animation: fade-in 1s .2s forwards;}
    }
</style>
{% endblock %}
